{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: GDB Debug",
            "command": "/usr/bin/gdb",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}",
                "-ex", "run",
                // Add any additional arguments here, if needed
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
